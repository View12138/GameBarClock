<Page
    x:Class="GameBarClock.Widgets.TipsWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameBarClock.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:Width="384"
    d:Height="48"
    d:RequestedTheme="Dark">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="6">
            <TextBlock x:Uid="Use" d:Text="使用" FontSize="16" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Spacing="6" Padding="6,2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="{ThemeResource ControlCornerRadius}">
                <TextBlock FontSize="18" Text="&#xE782;" VerticalAlignment="Center" FontFamily="HoloLens MDL2 Assets"/>
                <TextBlock FontSize="18" Text="+ G" VerticalAlignment="Center" Padding="0,0,0,2"/>
            </StackPanel>
            <TextBlock x:Uid="XBoxGameTip" d:Text="打开 XBox 游戏栏以使用此小组件" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
